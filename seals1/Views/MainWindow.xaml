<Window x:Class="SalesSuite.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:lvc="clr-namespace:LiveChartsCore.SkiaSharpView.WPF;assembly=LiveChartsCore.SkiaSharpView.WPF"
        Title="Dashboard" Height="650" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#ecf0f1">

    <DockPanel>
        <!-- ✅ Vertical Sidebar -->
        <StackPanel DockPanel.Dock="Left" Background="#2c3e50" Width="180">
            <TextBlock Text="Sales Suite" Foreground="White" FontSize="18"
                       FontWeight="Bold" Margin="20" HorizontalAlignment="Center"/>

            <ListBox x:Name="NavList" Background="Transparent" BorderThickness="0" Foreground="White"
                     SelectionChanged="NavList_SelectionChanged" FontSize="14" FontWeight="Bold">
                <ListBoxItem Content="🏠 Home" Tag="Home"/>
                <ListBoxItem Content="👤 Customers" Tag="Customers"/>
                <ListBoxItem Content="📦 Products" Tag="Products"/>
                <ListBoxItem Content="🛒 Purchases" Tag="Purchases"/>
                <ListBoxItem Content="📑 Reports" Tag="Reports"/>
                <!-- ✅ جديد -->

                <ListBoxItem Content="📝 Register" Tag="Register"/>
                <ListBoxItem Content="🚪 Logout" Tag="Logout"/>
            </ListBox>
        </StackPanel>

        <!-- ✅ Dashboard Content -->
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="150"/>
                <RowDefinition Height="*"/>
            </Grid.RowDefinitions>

            <!-- Top Cards -->
            <StackPanel Orientation="Horizontal" Grid.Row="0" Margin="0,0,0,15">
                <Border Background="White" CornerRadius="10" Padding="15" Width="200" Margin="0,0,15,0">
                    <StackPanel>
                        <TextBlock Text="Total Sales" FontWeight="Bold" Foreground="Gray"/>
                        <TextBlock x:Name="TotalSalesTxt" Text="$0" FontSize="22" FontWeight="Bold" Foreground="#27ae60"/>
                    </StackPanel>
                </Border>

                <Border Background="White" CornerRadius="10" Padding="15" Width="200" Margin="0,0,15,0">
                    <StackPanel>
                        <TextBlock Text="Last Month Sales" FontWeight="Bold" Foreground="Gray"/>
                        <TextBlock x:Name="LastMonthSalesTxt" Text="$0" FontSize="22" FontWeight="Bold" Foreground="#2980b9"/>
                    </StackPanel>
                </Border>

                <Border Background="White" CornerRadius="10" Padding="15" Width="200">
                    <StackPanel>
                        <TextBlock Text="Total Customers" FontWeight="Bold" Foreground="Gray"/>
                        <TextBlock x:Name="TotalCustomersTxt" Text="0" FontSize="22" FontWeight="Bold" Foreground="#8e44ad"/>
                    </StackPanel>
                </Border>
            </StackPanel>

            <!-- Chart + Recent Sales -->
            <Grid Grid.Row="1" Margin="0,20,0,0">
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="350"/>
                </Grid.ColumnDefinitions>

                <!-- Sales Chart -->
                <Border Background="White" CornerRadius="10" Padding="15" Margin="0,0,20,0">
                    <StackPanel>
                        <TextBlock Text="Monthly Sales" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                        <lvc:CartesianChart x:Name="SalesChart"/>
                    </StackPanel>
                </Border>

                <!-- Recent Sales -->
                <Border Background="White" CornerRadius="10" Padding="15" Grid.Column="1">
                    <StackPanel>
                        <TextBlock Text="Recent Purchases" FontWeight="Bold" FontSize="16" Margin="0,0,0,10"/>
                        <ListView x:Name="RecentSalesList" Height="300">
                            <ListView.View>
                                <GridView>
                                    <GridViewColumn Header="Date" DisplayMemberBinding="{Binding Date}" Width="100"/>
                                    <GridViewColumn Header="Customer" DisplayMemberBinding="{Binding CustomerName}" Width="150"/>
                                    <GridViewColumn Header="Total" DisplayMemberBinding="{Binding Total}" Width="80"/>
                                </GridView>
                            </ListView.View>
                        </ListView>
                    </StackPanel>
                </Border>
            </Grid>
        </Grid>
    </DockPanel>
</Window>

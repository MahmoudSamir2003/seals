<Window x:Class="SalesSuite.Views.RegisterWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Register" Height="500" Width="650"
        WindowStartupLocation="CenterScreen"
        ResizeMode="NoResize" Background="#ecf0f1">

    <Grid>
        <!-- خلفية متدرجة -->
        <Grid.Background>
            <LinearGradientBrush StartPoint="0,0" EndPoint="1,1">
                <GradientStop Color="#FF6465BD" Offset="0"/>
                <GradientStop Color="#ff7eb3" Offset="1"/>
            </LinearGradientBrush>
        </Grid.Background>

        <!-- كارت التسجيل -->
        <Border Background="White" CornerRadius="20" Padding="30"
                Width="420" Height="420"
                HorizontalAlignment="Center" VerticalAlignment="Center">
            <StackPanel>
                <TextBlock Text="Create Account" FontSize="26" FontWeight="Bold"
                           Foreground="#2d3436" HorizontalAlignment="Center"/>
                <TextBlock Text="Fill the form to register" FontSize="14"
                           Foreground="Gray" HorizontalAlignment="Center" Margin="0,0,0,20"/>

                <!-- Username -->
                <TextBlock Text="Username" Foreground="Gray"/>
                <TextBox x:Name="UserBox" Height="35" Width="300"
                         Background="#f1f2f6" BorderBrush="#dcdde1" Margin="0,5,0,15"/>

                <!-- Password -->
                <TextBlock Text="Password" Foreground="Gray"/>
                <PasswordBox x:Name="Pass1" Height="35" Width="300"
                             Background="#f1f2f6" BorderBrush="#dcdde1" Margin="0,5,0,15"/>

                <!-- Confirm Password -->
                <TextBlock Text="Confirm Password" Foreground="Gray"/>
                <PasswordBox x:Name="Pass2" Height="35" Width="300"
                             Background="#f1f2f6" BorderBrush="#dcdde1" Margin="0,5,0,20"/>

                <!-- زر التسجيل -->
                <Button Content="Register" Click="Btn_Click"
                        Height="40" Background="#e84393" Foreground="White"
                        FontWeight="Bold" BorderBrush="#e84393" Margin="0,0,0,10"/>

                <!-- رجوع -->
                <Button Content="⬅ Back to Login" Click="Back_Click"
                        Background="Transparent" Foreground="#e84393"
                        BorderBrush="Transparent" FontSize="14"
                        Cursor="Hand" HorizontalAlignment="Center"/>
            </StackPanel>
        </Border>
    </Grid>
</Window>

<Window x:Class="SalesSuite.Views.ProductsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Products" Height="600" Width="1000"
        Background="#f5f6fa" WindowStartupLocation="CenterScreen">

    <Grid Margin="20">
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="300"/>
            <ColumnDefinition Width="*"/>
        </Grid.ColumnDefinitions>

        <!-- فورم المنتج -->
        <Border Grid.Column="0" Background="White" CornerRadius="12"
                BorderBrush="#dcdde1" BorderThickness="1" Padding="15" Margin="0,0,15,0">
            <StackPanel>
                <TextBlock Text="Add / Edit Product" FontSize="18" FontWeight="Bold" Margin="0,0,0,10"/>

                <TextBlock Text="Name"/>
                <TextBox x:Name="NameBox" Height="30" Margin="0,5"/>

                <TextBlock Text="SKU"/>
                <StackPanel Orientation="Horizontal" Margin="0,5">
                    <TextBox x:Name="SkuBox" Height="30" Width="180" Margin="0,0,5,0"/>
                    <Button Content="Gen" Click="GenSku_Click" Width="50" Height="30"/>
                </StackPanel>

                <TextBlock Text="Price"/>
                <TextBox x:Name="PriceBox" Height="30" Margin="0,5"/>

                <TextBlock Text="Quantity"/>
                <TextBox x:Name="QtyBox" Height="30" Margin="0,5"/>

                <TextBlock Text="Description"/>
                <TextBox x:Name="DescBox" Height="60" TextWrapping="Wrap" AcceptsReturn="True" Margin="0,5"/>

                <StackPanel Orientation="Horizontal" Margin="0,15,0,0">
                    <Button Content="💾 Save" Click="Save_Click"
                            Width="100" Margin="0,0,10,0"
                            Background="#27ae60" Foreground="White"/>
                    <Button Content="🖨️ Print Barcode" Click="PrintBarcode_Click"
                            Width="120" Background="#2980b9" Foreground="White"/>
                </StackPanel>
            </StackPanel>
        </Border>

        <!-- جدول المنتجات -->
        <Border Grid.Column="1" Background="White" CornerRadius="12"
                BorderBrush="#dcdde1" BorderThickness="1" Padding="10">
            <DataGrid x:Name="GridProducts"
                      AutoGenerateColumns="False" CanUserAddRows="False"
                      IsReadOnly="True" AlternatingRowBackground="#f8f9fa">

                <DataGrid.Columns>
                    <DataGridTextColumn Header="ID" Binding="{Binding Id}" Width="50"/>
                    <DataGridTextColumn Header="Name" Binding="{Binding Name}" Width="150"/>
                    <DataGridTextColumn Header="SKU" Binding="{Binding SKU}" Width="100"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="100"/>
                    <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="100"/>
                    <DataGridTextColumn Header="Description" Binding="{Binding Description}" Width="*"/>

                    <!-- زر مسح -->
                    <DataGridTemplateColumn Header="Actions" Width="100">
                        <DataGridTemplateColumn.CellTemplate>
                            <DataTemplate>
                                <Button Content="❌ Delete"
                                        Background="#e74c3c" Foreground="White"
                                        Padding="5,2" Cursor="Hand"
                                        Click="DeleteProduct_Click"/>
                            </DataTemplate>
                        </DataGridTemplateColumn.CellTemplate>
                    </DataGridTemplateColumn>
                </DataGrid.Columns>
            </DataGrid>
        </Border>
    </Grid>
</Window>

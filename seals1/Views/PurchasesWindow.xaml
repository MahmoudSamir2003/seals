<Window x:Class="SalesSuite.Views.PurchasesWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="Purchases" Height="600" Width="1100"
        WindowStartupLocation="CenterScreen"
        Background="#ecf0f1">

    <DockPanel>
        <!-- ✅ Sidebar -->
        <StackPanel DockPanel.Dock="Left" Background="#2c3e50" Width="180">
            <TextBlock Text="Sales Suite" Foreground="White" FontSize="18"
                       FontWeight="Bold" Margin="20" HorizontalAlignment="Center"/>
            <ListBox x:Name="NavList" Background="Transparent" BorderThickness="0" Foreground="White"
                     SelectionChanged="NavList_SelectionChanged" FontSize="14" FontWeight="Bold">
                <ListBoxItem Content="🏠 Home" Tag="Home"/>
                <ListBoxItem Content="👤 Customers" Tag="Customers"/>
                <ListBoxItem Content="📦 Products" Tag="Products"/>
                <ListBoxItem Content="🛒 Purchases" Tag="Purchases"/>
                <ListBoxItem Content="📑 Reports" Tag="Reports"/>
                <ListBoxItem Content="📝 Register" Tag="Register"/>
                <ListBoxItem Content="🚪 Logout" Tag="Logout"/>
            </ListBox>
        </StackPanel>

        <!-- ✅ Purchases Content -->
        <Grid Margin="15">
            <Grid.RowDefinitions>
                <RowDefinition Height="Auto"/>
                <RowDefinition Height="*"/>
                <RowDefinition Height="Auto"/>
            </Grid.RowDefinitions>

            <!-- اختيار العميل والمنتج -->
            <StackPanel Orientation="Horizontal" Margin="0,0,0,10">
                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="Select Customer" FontWeight="Bold"/>
                    <ComboBox x:Name="CustomerBox" Width="200"/>
                </StackPanel>

                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="Select Product" FontWeight="Bold"/>
                    <ComboBox x:Name="ProductBox" Width="200"/>
                </StackPanel>

                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="Quantity" FontWeight="Bold"/>
                    <TextBox x:Name="QtyBox" Width="100"/>
                </StackPanel>

                <Button Content="Add Item" Click="AddItem_Click"
                        Background="#27ae60" Foreground="White"
                        Width="120" Margin="0,22,0,0"/>
            </StackPanel>

            <!-- جدول الأصناف -->
            <DataGrid x:Name="GridItems" Grid.Row="1" AutoGenerateColumns="False"
                      CanUserAddRows="False" Margin="0,0,0,10">
                <DataGrid.Columns>
                    <DataGridTextColumn Header="Product" Binding="{Binding Product.Name}" Width="*"/>
                    <DataGridTextColumn Header="Price" Binding="{Binding Price}" Width="100"/>
                    <DataGridTextColumn Header="Quantity" Binding="{Binding Quantity}" Width="100"/>
                    <DataGridTextColumn Header="Total" Binding="{Binding Total}" Width="100"/>
                </DataGrid.Columns>
            </DataGrid>

            <!-- الإجماليات -->
            <StackPanel Grid.Row="2" Orientation="Horizontal" HorizontalAlignment="Right">
                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="Subtotal:" FontWeight="Bold"/>
                    <TextBlock x:Name="SubtotalTxt" Text="0.00"/>
                </StackPanel>
                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="VAT (15%):" FontWeight="Bold"/>
                    <TextBlock x:Name="VatTxt" Text="0.00"/>
                </StackPanel>
                <StackPanel Margin="0,0,20,0">
                    <TextBlock Text="Grand Total:" FontWeight="Bold"/>
                    <TextBlock x:Name="GrandTotalTxt" Text="0.00"/>
                </StackPanel>

                <Button Content="Save Purchase" Click="SavePurchase_Click"
                        Background="#2980b9" Foreground="White"
                        Width="150" Margin="10,0,0,0"/>
                <Button Content="Delete Item" Click="DeleteItem_Click"
                        Background="#e74c3c" Foreground="White"
                        Width="120" Margin="10,0,0,0"/>
            </StackPanel>
        </Grid>
    </DockPanel>
</Window>
